Page {
  background: #fff;
}

.search_row {
  display: flex;
  justify-content: center;
  flex-direction: row;
  background-color: #ffffff;
  height: 70rpx;
  width: 100%;
}

.search {
  margin-top: 10rpx;
  border: 1px solid #c1c1c1;
  border-radius: 25rpx;
  width: 80%;
  height: 70%;
}

.searchicon {
  display: flex;
  align-items: center;
  margin-top: 5rpx;

}

.contain {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.search_input {
  font-size: 34rpx;
  color: #d0d0d0;
  display: flex;
  align-items: center;
  margin-top: 5rpx;
}

/* searchbar结束 */


.bar_container {
  width: 100%;
  display: flex;
  overflow: hidden;
  flex-direction: row;
}

.left_tabbar {
  width: 20%;
}

.right_content {
  width: 74%;
}

.left_tabbar_item {
  color: #7c7c7c;
  font-size: 26rpx;
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid #fff;
}

.left_tabbar_list {
  background: #eee;
}

.left_tabbar .active {
  background: #fff;
  color: #000;
  transition: all 0.5s;
  animation: show 0.5s;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

@-webkit-keyframes show {
  0% {
    opacity: 0;
    transform: rotateY(180deg);
  }

  100% {
    opacity: 1;
    transform: rotateY(360deg);
  }
}

@keyframes show {
  0% {
    opacity: 0;
    transform: rotateY(180deg);
  }

  100% {
    opacity: 1;
    transform: rotateY(360deg);
  }
}



.tab_panel {
  margin: 0 20rpx;
  font-size: 26rpx;
}

/* left_tabbar结束 */

.template {
  display: flex;
  width: 100%;
  flex-direction: column;
}

.item {
  display: flex;
  flex-direction: row;
  height: 230rpx;
}

.space {
  width: 100%;
  height: 6px;
  background-color: #E0E0DF;
}

.template .image {
  height: 170rpx;
  width: 170rpx;
  margin-top: 20rpx;
  margin-left: -10rpx;
}

.template .productImg {
  width: 30%;
}

.productInfo {
  width: 70%;
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}

.productInfo .productTitle {
  margin-right: 20rpx;
  height: 120rpx;
  font-size: 28rpx;
  text-overflow: -o-ellips0is-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  align-content: center;
}

.price {
  display: flex;
  flex-direction: row;
}

.productInfo .productPrice {
  font-size: 35rpx;
  color: red;
}

.productInfo .productOldPrice {
  text-decoration: line-through;
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #9C9C9C;
}

.secondhand {
  width: 100%;
  height: 100%;
}

.secondhand>.second_box {
  height: 100%;
  width: 100%;
}

.secondhand>.second_box>view {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.secondhand>.second_box>view>view:nth-child(1) {
  width: 30%;
  line-height: 80rpx;
}

.secondhand>.second_box>view>view:nth-child(2) {
  width: 70%;
  line-height: 80rpx;
}

.secondhand>.second_box>view>view:nth-child(2)>view {
  width: 100%;
  line-height: 80rpx;
}

.secondhand>.second_box>view>view:nth-child(2)>view>view.select_box {
  width: 100%;
  line-height: 80rpx;
}

.secondhand>.second_box>view>view:nth-child(2)>input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
}

.btn_box {
  margin-top: 20rpx;
}

.btn_box>button {
  background: #FFA54F;
  color: #fff;
  text-algin: center;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;


}

label {
  color: #999;
}



/* select 下拉框 开始*/
.select_box {
  background: #fff;
  width: 100%;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  color: #999;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  line-height: 80rpx;
}

.select_text {
  font-size: 28rpx;
  flex: 1;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 80rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #f1f1f1;
  transition: height 0.3s;
  z-index: 999;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.issues-label {
  font-size: 28rpx;
  line-height: 80rpx;
  color: #999;

}

.issues-img-panel {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-top: 1px solid #e5e5e5;
  border-bottom: 1px solid #e5e5e5;
  padding: 15rpx 25rpx;
}

.issues-img-panel.error {
  background: rgba(231, 138, 176, 0.06);
}

.issues-input {
  border-bottom: 1px solid #e5e5e5;
  padding: 15rpx 0;
  text-indent: 20pt;
}

.issues-input.error {
  background: rgba(231, 138, 176, 0.06);
}

.issues-textarea {
  width: 100%;
  text-indent: 20pt;
  padding: 20rpx 0;
  min-height: 225rpx;
  box-sizing: border-box;
}

.issues-textarea.error {
  background: rgba(231, 138, 176, 0.06);
}

.issues-photo-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #888;
  margin: 20rpx;
  margin-right: 0;
  width: 135rpx;
  height: 135rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 5rpx;
}

.issues-photo-item:active {
  opacity: .8;
}

.issues-photo-item .remind-img {
  padding: 0;
}

.issues-photo-item image {
  width: 100%;
  height: 100%;
}

.add-photo:active {
  background: #f0f0f0;
}

.add-photo::before,
.add-photo::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  background: #e5e5e5;
}

.add-photo:active::before,
.add-photo:active::after {
  background: #ddd;
}

.add-photo::before {
  width: 10rpx;
  height: 80rpx;
  margin-top: -40rpx;
  margin-left: -5rpx;
}

.add-photo::after {
  width: 80rpx;
  height: 10rpx;
  margin-top: -5rpx;
  margin-left: -40rpx;
}

.picPre image {
  width: 100%;
  height: 160rpx;
}

.picPre {
  width: 30%;
  margin-left: 50rpx;
  position: relative;
}

.image_box {
  display: flex;
  width: 70%;

}

.picPre view {
  position: absolute;
  right: -15px;
  top: 6rpx;
  width: 15px;
  height: 15px;
  background-size: cover;
}

.picPre image {
  height: 100%;
  width: 100%;
}


/* select 下拉框结束 */
